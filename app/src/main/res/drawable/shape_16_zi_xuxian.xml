<shape xmlns:android="http://schemas.android.com/apk/res/android" >
<!--    定义圆角-->
    <corners
    android:radius="16dp"
  />
<!--    内部填充色-->
    <solid android:color="@color/transparent"/>

    <!--    stroke-->
    <!--    width      描边的宽度-->
    <!--   color 描边的颜色-->
    <!--     以下两个属性设置虚线 -->
    <!--   dashWidth 虚线的宽度，值为0时是实线-->
    <!--   dashGap 虚线的间隔-->
    <stroke
    android:width="1dp"
    android:color="#B4B2D4"
    android:dashWidth="2dp"
    android:dashGap="2dp" />

</shape>