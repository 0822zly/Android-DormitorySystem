<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.DashboardFragment">
<FrameLayout
    android:layout_width="match_parent"
    android:background="@color/tinkcolor"
    android:layout_height="?actionBarSize">
    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/addtrall"
        android:background="@drawable/ic_baseline_add_24"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="16dp"></View>
       <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:textSize="18sp"
                android:text="添加行程"
           android:layout_gravity="center_vertical|right"
           android:layout_marginRight="50dp"
           android:id="@+id/tv_addtrall"></TextView>
</FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/jingqu"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:text="景区"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/jiaotong"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="交通"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:id="@+id/jingdian"
            android:visibility="gone"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="16dp"
            android:text="酒店"></Button>
    </LinearLayout>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="wrap_content"
    android:id="@+id/recyclerView"></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>