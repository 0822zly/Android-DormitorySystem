<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ac_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomview">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:text="赏金"
            android:id="@+id/temp_tv1"
            android:gravity="center"
            android:textSize="17sp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/temp_tv1"
            app:layout_constraintBottom_toBottomOf="@id/temp_tv1"
            app:layout_constraintLeft_toRightOf="@id/temp_tv1"
            android:textColor="#FF433F"
            android:text="3"
            android:id="@+id/tv_totalprice"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:textSize="21sp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/temp_tv1"
            app:layout_constraintLeft_toLeftOf="@id/temp_tv1"
            android:textColor="#D0D0E5"
            android:text="合理的赏金有助于快速接单"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:textSize="12sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="同意并下单"
             app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:id="@+id/commit"
            android:background="@drawable/shape_16_zi_bg"
            android:layout_height="40dp"></Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:orientation="vertical"
        android:layout_above="@id/bottomview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".ui.login.LoginActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_16_white_bg"
                android:id="@+id/line_recive_send"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_black_bg"
                        android:textColor="@color/white"
                        android:text="取"
                        android:gravity="center"
                        android:textSize="21sp"
                        />
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:id="@+id/ed_get"

                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="请输入取货地址"
                        android:background="@color/transparent"
                        android:textSize="17sp"
                        ></androidx.appcompat.widget.AppCompatEditText>
                    <View
                        android:layout_width="24dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="24dp"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle_zi_bg"
                        android:textColor="@color/white"
                        android:text="送"
                        android:gravity="center"
                        android:textSize="21sp"
                        />
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="请输入送达地址"
                        android:id="@+id/ed_send"
                        android:background="@color/transparent"
                        android:textSize="17sp"
                        ></androidx.appcompat.widget.AppCompatEditText>
                    <View
                        android:layout_width="24dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="24dp"></View>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_16_white_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="设定完成日期"
                        android:gravity="center"
                        android:textSize="17sp"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#8C8BA4"
                        android:id="@+id/tv_enddata"
                        android:text="2020-1-6"
                        android:gravity="center_vertical|right"
                        android:textSize="14sp"
                        />
                    <View
                        android:layout_width="24dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="24dp"></View>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="设定完成时间"
                        android:gravity="center"
                        android:textSize="17sp"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#8C8BA4"
                        android:id="@+id/tv_endtime"
                        android:text="14:28"
                        android:gravity="center_vertical|right"
                        android:textSize="14sp"
                        />
                    <View
                        android:layout_width="24dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="24dp"></View>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="收件人"
                        android:gravity="center"
                        android:textSize="17sp"
                        />
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:hint="姓名"
                        android:id="@+id/ed_name"
                        android:background="@color/transparent"
                        android:textSize="17sp"
                        ></androidx.appcompat.widget.AppCompatEditText>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="数量"
                        android:gravity="center"
                        android:textSize="17sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical|right"
                        android:layout_height="wrap_content"
                        >
                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_baseline_add_24"
                            android:id="@+id/addnum"></View>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:id="@+id/tv_num"
                            android:layout_gravity="center_vertical|left"
                            android:textColor="#020038"
                            android:textSize="14sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 件"
                            android:layout_gravity="center_vertical|left"
                            android:textColor="#020038"
                            android:textSize="14sp"
                            />
                        <View
                            android:layout_width="24dp"
                            android:background="@drawable/ic_baseline_horizontal_rule_24"
                            android:layout_height="24dp"
                            android:id="@+id/minusnum"></View>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="数量"
                        android:gravity="center"
                        android:textSize="17sp"
                        />
                    <SeekBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:maxHeight="3.4dp"
                        android:minHeight="3.4dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:progress="0"
                        android:splitTrack="false"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/seekBar"
                        ></SeekBar>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="1"
                        android:id="@+id/tv_weight"
                        android:gravity="center"
                        android:textSize="17sp"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_500"
                        android:text="公斤以内"
                        android:gravity="center"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="备注信息"
                        android:gravity="center"
                        android:textSize="17sp"
                        /> <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9593C3"
                    android:text="选填"
                    android:gravity="center_vertical|right"
                    android:textSize="14sp"
                    />

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:background="#F5F6FA"
                    android:padding="16dp"
                    android:layout_margin="16dp"
                    android:gravity="left|top"
                    android:textSize="14sp"
                    android:id="@+id/ed_content"
                    android:textColor="#B4B2D4"
                    android:hint="仅填写配送特殊要求。取件码、订单号等可拍照上传图片，避免被他人取单。禁止填写手机号微信号等私下联系信息，将封号处理。"
                    android:layout_height="100dp"
                    ></EditText>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="上传图片"
                        android:gravity="center"
                        android:textSize="17sp"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9593C3"
                        android:layout_marginLeft="8dp"
                        android:text="(取件码等收件信息截图)"
                        android:gravity="center_vertical|right"
                        android:textSize="14sp"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#9593C3"
                        android:text="0/4 选填"
                        android:id="@+id/tv_images"
                        android:gravity="center_vertical|right"
                        android:textSize="14sp"
                        />

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerView"></androidx.recyclerview.widget.RecyclerView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="设定赏金"
                        android:gravity="center"
                        android:textSize="17sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical|right"
                        android:layout_height="wrap_content"
                        >
                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_baseline_add_24"
                            android:id="@+id/addprice"></View>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:id="@+id/tv_price"
                            android:layout_gravity="center_vertical|left"
                            android:textColor="#020038"
                            android:textSize="14sp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ￥"
                            android:id="@+id/tv_price1"
                            android:layout_gravity="center_vertical|left"
                            android:textColor="@color/purple_500"
                            android:textSize="14sp"
                            />
                        <View
                            android:layout_width="24dp"
                            android:background="@drawable/ic_baseline_horizontal_rule_24"
                            android:layout_height="24dp"
                            android:id="@+id/minusprice"></View>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="性别限定"
                        android:gravity="center"
                        android:textSize="17sp"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#8C8BA4"
                        android:id="@+id/tv_sex"
                        android:text="不限性别"
                        android:gravity="center_vertical|right"
                        android:textSize="14sp"
                        />
                    <View
                        android:layout_width="24dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="24dp"></View>
                </LinearLayout>

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:checked="true"
                android:id="@+id/checkBox"
                android:layout_marginRight="16dp"
                android:text="阅读并同意《服务协议》"
                ></androidx.appcompat.widget.AppCompatCheckBox>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</RelativeLayout>