<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="5dp"
    android:id="@+id/item_layout"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:layout_width="90dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_height="90dp"
    android:scaleType="fitXY"
    android:id="@+id/item_image"></ImageView>
    <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_image"
        app:layout_constraintLeft_toRightOf="@id/item_image"
        android:maxLines="1"
        android:layout_marginLeft="8dp"
        android:text="我是北京旅游的攻略哈哈"
                android:textColor="@color/black"
                android:textSize="16sp"
                 />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"

        app:layout_constraintTop_toBottomOf="@id/item_title"
        app:layout_constraintLeft_toRightOf="@id/item_image"
        android:maxLines="3"
        android:text="我是北京旅游的攻略哈哈我是北京旅游的攻略哈哈我是北京旅游的攻略哈哈我是北京旅游的攻略哈哈我是北京旅游的攻略哈哈"
        android:textColor="@color/gray"
        android:textSize="14sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_image"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_image_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:textColor="@color/gray"
            android:layout_gravity="center_vertical|left"
            android:textSize="12sp"
            />
        <View
            android:layout_width="15dp"
            android:layout_marginLeft="5dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_baseline_insert_photo_24"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:layout_marginLeft="30dp"

            android:textColor="@color/gray"
            android:layout_gravity="center_vertical|left"
            android:textSize="12sp"
            />
        <View
            android:layout_width="15dp"
            android:layout_marginLeft="5dp"

            android:layout_height="15dp"
            android:background="@drawable/ic_baseline_favorite_24"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:layout_marginLeft="30dp"
            android:textColor="@color/gray"
            android:layout_gravity="center_vertical|left"
            android:textSize="12sp"
            />
        <View
            android:layout_width="15dp"
            android:layout_marginLeft="5dp"

            android:layout_height="15dp"
            android:background="@drawable/ic_baseline_comment_24"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>