<?xml version="1.0" encoding="utf-8"?>
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/ac_bg"
        android:orientation="vertical"
        android:layout_above="@id/bottomview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".ui.login.LoginActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_16_white_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:id="@+id/ed_getname"

                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="请输入姓名"
                        android:background="@color/transparent"
                        android:textSize="17sp"
                        ></androidx.appcompat.widget.AppCompatEditText>
                    <View
                        android:layout_width="24dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="24dp"></View>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:id="@+id/ed_getxueyuanname"

                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="请输入学院名字"
                        android:background="@color/transparent"
                        android:textSize="17sp"
                        ></androidx.appcompat.widget.AppCompatEditText>
                    <View
                        android:layout_width="24dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="24dp"></View>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:id="@+id/ed_getzhuanye"

                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="请输入系或者专业名字"
                        android:background="@color/transparent"
                        android:textSize="17sp"
                        ></androidx.appcompat.widget.AppCompatEditText>
                    <View
                        android:layout_width="24dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="24dp"></View>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:id="@+id/ed_getnianji"

                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="请输入年级"
                        android:background="@color/transparent"
                        android:textSize="17sp"
                        ></androidx.appcompat.widget.AppCompatEditText>
                    <View
                        android:layout_width="24dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="24dp"></View>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:id="@+id/ed_getshenfenzheng"

                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="请输入身份证"
                        android:inputType="number"
                        android:background="@color/transparent"
                        android:textSize="17sp"
                        ></androidx.appcompat.widget.AppCompatEditText>
                    <View
                        android:layout_width="24dp"
                        android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="24dp"></View>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                     <androidx.appcompat.widget.AppCompatTextView
                                 android:layout_width="wrap_content"
                                 android:text="请选择学生证照片"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="center_vertical|left"
                                 android:textColor="@color/gray"
                                 android:textSize="14sp"
                                  />
                    <ImageView
                        android:layout_marginTop="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_baseline_add_24_big"
                        android:id="@+id/img_xueshengzheng"></ImageView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:text="请选择身份证正面"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        />
                    <ImageView
                        android:layout_marginTop="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_baseline_add_24_big"
                        android:id="@+id/img_shenfenzheng_1"></ImageView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#B4B2D4"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_"
                        android:layout_width="wrap_content"
                        android:text="请选择身份证背面"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        />
                    <ImageView
                        android:layout_marginTop="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_baseline_add_24_big"
                        android:id="@+id/img_shenfenzheng_0"></ImageView>
                </LinearLayout>

        </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="提交"
                android:id="@+id/bt_commit"
                android:layout_margin="16dp"></Button>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
