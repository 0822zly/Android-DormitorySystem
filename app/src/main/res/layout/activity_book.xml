<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/tinkcolor"

        android:layout_height="?actionBarSize">

        <FrameLayout
            android:layout_width="?actionBarSize"
            android:id="@+id/back"
            android:layout_height="?actionBarSize">
            <View
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:background="@drawable/ic_arrow_back_easy_photos"
                ></View>

        </FrameLayout>
        <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                     android:id="@+id/sdsdsd"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                     />
       <FrameLayout
           android:layout_width="?actionBarSize"

           android:layout_height="?actionBarSize">
           <View
               android:layout_width="24dp"
               android:id="@+id/collentt"
               android:layout_gravity="center"
               android:layout_height="24dp"
               android:background="@mipmap/icon_new_collent"
               ></View>
       </FrameLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:id="@+id/item_image"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_auther"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="14sp"
                />

        </LinearLayout>
    </LinearLayout>
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="6dp"

        app:flexWrap="wrap"
        android:id="@+id/item_line_mark"></com.google.android.flexbox.FlexboxLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:textColor="@color/gray"
        android:textSize="12sp"
        />
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/smartrefreshlayout">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listview"></androidx.recyclerview.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>